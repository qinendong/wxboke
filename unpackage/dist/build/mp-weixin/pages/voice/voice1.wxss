.input_view .Voice {
    width: 100rpx;
    height: 50rpx;
}
.input_view .input {
    width: 500rpx;
    background: #ffffff;
    height: 70rpx;
    margin-top: 15rpx;
}
.input_view .input input {
      line-height: 70rpx;
      height: 70rpx;
      padding-left: 20rpx;
}
.input_view .input view {
      width: 500rpx;
      line-height: 70rpx;
      height: 70rpx;
      text-align: center;
}
.input_view .btn {
    width: 150rpx;
}
.input_view .btn view {
      margin: 0 auto;
      width: 100rpx;
      height: 70rpx;
      margin-top: 15rpx;
      font-size: 28rpx;
      background: #22ac38;
      color: #ffffff;
      text-align: center;
      line-height: 70rpx;
}
.active {
  text-align: right;
}
.active1 {
